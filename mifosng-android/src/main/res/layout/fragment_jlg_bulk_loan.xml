<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                tools:text="Product"
                android:text="@string/product_name"/>

            <Spinner
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/sp_jlg_product"
                android:layout_weight="0.5"/>

        </TableRow>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="8dp">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">
                <TableRow>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        tools:text="Loan Officer"
                        android:text="@string/loan_officer"/>

                    <Spinner
                        android:id="@+id/sp_loan_officer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        tools:text="Fund"
                        android:text="@string/loan_fund"/>

                    <Spinner
                        android:id="@+id/sp_fund"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"/>
                </TableRow>

                <TableRow>
                    <android.support.design.widget.TextInputEditText
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/tv_submission_date"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="@string/center_submission_date"/>
                    </android.support.design.widget.TextInputEditText>
                    <!--<TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        tools:text="Submitted On"
                        android:text="@string/center_submission_date"/>

                    <TextView
                        android:id="@+id/tv_submission_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        tools:text="18-08-2017"
                        android:background="@color/gray_bright"/>-->
                </TableRow>

                <TableRow>
                    <android.support.design.widget.TextInputEditText
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/tv_disbursement_date"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="@string/approval_disbursement_date"/>
                    </android.support.design.widget.TextInputEditText>
                    <!--<TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        tools:text="Disbursement On"
                        android:text="@string/approval_disbursement_date"/>

                    <TextView
                        android:id="@+id/tv_disbursement_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        tools:text="18-08-2017"
                        android:background="@color/gray_bright"/>-->
                </TableRow>
            </TableLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>